{{> layout.hbs}}

<h3>List of Sightings</h3>
<table class="table">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Animal Name</th>
        <th scope="col">Location</th>
        <th scope="col">Ranger Name</th>
        <th scope="col">Age</th>
        <th scope="col">id</th>
    </tr>
    </thead>
    <tbody>
    {{#each sightings}}
        <tr>
            <th scope="row">{{ id }}</th>
            <td>{{ animal.name }}</td>
            <td>{{ location }}</td>
            <td>{{ rangerName }}</td>
            <td>{{ age }}</td>
        </tr>
    {{/each}}
    </tbody>
</table>
